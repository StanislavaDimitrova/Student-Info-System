<Window x:Class="StudentInfoSystem.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInfoSystem"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="380">
    <Grid>
        <StackPanel>
            <DockPanel>
                <Label x:Name="username" Content="Потребителско име:" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtUsername" HorizontalAlignment="Right" Height="23" Margin="0,45,20,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
            </DockPanel>
            <DockPanel>
                <Label x:Name="password" Content="Парола:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="121"/>
                <PasswordBox x:Name="txtPassword" HorizontalAlignment="Right" Height="23" Margin="0,0,20,0" VerticalAlignment="Top" Width="200"/>
            </DockPanel>
        </StackPanel>
        <Button x:Name="OK" Content="OK" HorizontalAlignment="Right" Margin="0,0,15,15" VerticalAlignment="Bottom" Width="75" Click="OK_Click"/>

    </Grid>
</Window>
